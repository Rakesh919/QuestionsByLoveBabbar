
// ðŸ˜ŽðŸ˜Ž Java Program to find maximum and minimum in array..
//User function Template for Java

class Solution
{ 
    public static int findSum(int A[],int N) 
    {
        //code here
        int min =A[0];
        int max=A[0];
        
        for(int i=0;i<N;i++){
            if(A[i]>max)
            max =A[i];
            
            if(min>A[i])
            min =A[i];
        }
        
        return max+min;
    }
}
